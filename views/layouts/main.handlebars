  <link rel="stylesheet" href="/stylesheets/style.css"> --}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

  <!-- navigation -->
  <nav class="navbar navbar-light bg-light d-flex justify-content-around">
    <div class="d-inline m-3">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" width="35"
            height="35" class="d-inline align-top" alt="我的餐廳清單">
          <span class="h3">
            {{#if isAuthenticated}} 
              {{ user.name }} 的餐廳清單
            {{else}}
              我的餐廳清單
            {{/if}}
          </span>
        </a>
    </div>
    <!-- create button -->
    <div class="text-end d-inline m-3">
      {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-outline-danger">Logout</a>
      {{else}}
        <a href="/users/login" class="btn btn-outline-danger">Login</a>
      {{/if}}
    </div>
  </nav>
  <!-- banner -->
  <div class="banner"></div>

  <!-- partial template -->
  {{{body}}}

  <!-- link to javascripts files -->
